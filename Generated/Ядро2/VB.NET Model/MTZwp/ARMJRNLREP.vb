        Public Overrides Sub FillDataTable(ByRef DestDataTable As System.Data.DataTable)
            Dim dr As  DataRow
            dr = destdatatable.NewRow
            try
            dr("ID") =ID
            dr("Brief") =Brief
             dr("repname") =repname
             if TheReport is nothing then
               dr("TheReport") =system.dbnull.value
               dr("TheReport_ID") =System.Guid.Empty
             else
               dr("TheReport") =TheReport.BRIEF
               dr("TheReport_ID") =TheReport.ID
             end if 
            DestDataTable.Rows.Add (dr)
           catch ex as System.Exception
              Debug.Print( ex.Message + " >> " + ex.StackTrace)
          end try
        End Sub



