            Select Case l
                Case 0
                   Return "ID"
                Case 1
                    Return "Name"
                Case 2
                    Return "TheCaption"
                Case 3
                    Return "TheComment"
                Case else
                return "" 
            End Select
        End If
        return "" 
End Function



